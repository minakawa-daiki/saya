            <li><a>スコア比較</a></li>
            <li><%= link_to 'CSV管理', csv_path %></li>
            <li>Coming Soon</li>
            <li><%= link_to 'ログアウト', logout_path %></li>
          </ul>
        </nav>
      </header>
      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
