            <li><%= link_to 'スコア比較', compare_path %></li>
            <li><%= link_to 'CSV管理', csv_path %></li>
            <li>Coming Soon</li>
            <li><%= link_to 'ログアウト', logout_path %></li>
          </ul>
        </nav>
      </header>
      <div class="content">
        <%= yield %>
      </div>
      <div class="footer">
        <p>Copyright © 2017 Daiki Minakawa All Rights Reserved.</p>
      </div>
    </div>
  </body>
</html>
